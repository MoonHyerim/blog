

<table width="100%" height="100%">

<tr>
<td width="100%" height="70" align="center" valign="top">
<a href="#bottom"><img src="assets/top_img.png" border="0"></a>
</td>
</tr>
<% @posts.each do |post| %>
<tr>
<td width="50%" height="100" align="center" valign="middle">
<span class="title"><%= post.title %></span><br><br>
<span class="write"><%= post.writer %></span><br>
<span class="set"><%= link_to 'mod', edit_post_path(post) %> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
<br>
</td>
</tr>

<tr>
<td width="50%" height="100%" align="center" valign="top">
<span class="content"><%= post.content %></span><br><br>
<% post_time = post.created_at %>
<%= post_time.strftime("%Y년 %m월%d일 %H시%M분%S초") %>

<hr width="100" align="center">
</td>
</tr>
<% end %>
<tr>
<td width="50%" height="30" align="center">
<span class="set"><a href="wr.html" target="_self"><%= link_to 'write', new_post_path %></a></span>
<a name="bottom"></a>
</td>
</tr>

</table>

